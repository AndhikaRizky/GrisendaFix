<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="75dp"
        android:text="FORM SERVICE"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tglText"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:hint=" Tanggal :"
                    android:inputType="textPersonName"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="dd / mm / yy"
                    android:textSize="17dp"/>

            </LinearLayout>


            <EditText
                android:id="@+id/identitasText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="No. Identitas"
                android:inputType="number" />

            <EditText
                android:id="@+id/pelangganText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nama Pelanggan"
                android:inputType="textPersonName" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button"
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:text="Tambah pembeli" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cari" />
            </LinearLayout>

            <EditText
                android:id="@+id/nomesinText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="No. Mesin"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/norangkaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="No. Rangka"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/kmText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Masukkan KM datang"
                android:inputType="number" />

            <EditText
                android:id="@+id/keluhtText"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:ems="10"
                android:hint="Keluhan"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/garansitextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Masa Garansi :"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/garansicheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ya, masih dalam masa garansi."
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>